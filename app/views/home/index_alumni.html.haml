-content_for :head do
  %meta{name: "viewport", content: "initial-scale=1.0, user-scalable=no"}
  %script{type: "text/javascript", src: 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer_compiled.js'}

  :javascript
    #{map_loader(@latitudes, @longitudes)}  

.row
  .span3
    - if @profile.nil?
      %br
      %br
      = link_to 'Create your profile', new_profile_path, :class => 'btn btn-primary'
    - else
      %h4
        = @profile.fullname
      %div
        %b Tempat lahir:
        = @profile.place_of_birth
      %div
        %b Tanggal lahir:
        = @profile.dob.to_formatted_s(:rfc822) 
      %div
        %b Domisili:
        = @profile.location
      %div
        %b Motto:
        = @profile.motto
      %div
        %b Interest:
        = @profile.interest
      %div
        %b Batch:
        = @profile.batch
      
      %br
      = link_to 'Edit', edit_profile_path, :class => 'btn btn-primary'
  
  .span8
    #map_canvas{:style => "width:800px; height:300px"}
  
    %h3 Data alumni FIM
    %table.table.table-condensed
      %tr
        %th Fullname
        %th Location
        %th Batch
    
      - @profiles.each do |profile|
        %tr
          %td= profile.fullname
          %td= profile.location
          %td= profile.batch
