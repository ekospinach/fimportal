.row
  .span12
    %table.table.table-strip
      %thead
        %tr
          %th No
          %th Nama
          %th Pernah daftar
          %th Institusi
          %th Provinsi
          %th Gender
          %th Agama
          %th Handphone
          %th Rekomendasi
      %tbody
        - @profiles.each_with_index do |profile, i|
          %tr
            %td= i+1
            %td= profile.fullname
            %td= profile.application_count > 0 ? profile.application_count : ''
            %td= profile.school
            %td= profile.province
            %td= profile.gender == "0" ? 'Laki-laki' : 'Perempuan'
            %td= profile.religion
            %td= profile.phone
            %td= profile.referal