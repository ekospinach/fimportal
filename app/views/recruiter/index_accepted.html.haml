.row
  .span12
    %h4 10 recently submitted:
    %table.table.table-strip.table-condensed
      %thead
        %tr
          %th No
          %th Nama
          %th Pernah daftar
          %th Insitusi
          %th Provinsi
          %th Gender
          %th Agama
          %th Handhine
          %th Pilihan Lokasi
      %tbody
        - @recently_added_profiles.each_with_index do |profile, i|
          %tr
            %td= i+1
            %td= profile.fullname
            %td= profile.application_count > 0 ? profile.application_count : ''
            %td= profile.school
            %td= profile.province
            %td= profile.gender == "0" ? 'Laki-laki' : 'Perempuan'
            %td= profile.religion
            %td= profile.phone
            %td= profile.accepted_location
.row
  .span12
    %h4 Cibubur
