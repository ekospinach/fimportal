-content_for :head do
  %meta{name: "viewport", content: "initial-scale=1.0, user-scalable=no"}
  %script{type: "text/javascript", src: 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer_compiled.js'}

  :javascript
    #{map_loader(@latitudes, @longitudes)}  
    $(function() {
      $('.footable').footable();
    });

.row
  .span3
    - if @profile.nil?
      %br
      %br
      = link_to 'Masukan data Anda', new_profile_path, :class => 'btn btn-primary'
    - else
      %h4
        = @profile.fullname
      %div
        %b Tempat lahir:
        = @profile.place_of_birth
      %div
        %b Tanggal lahir:
        = @profile.dob.to_formatted_s(:rfc822) 
      %div
        %b Domisili:
        = @profile.location
      %div
        %b Motto:
        = @profile.motto
      %div
        %b Interest:
        = @profile.interest
      %div
        %b Batch:
        = @profile.batch
      
      %br
      = link_to 'Ubah data Anda', edit_profile_path, :class => 'btn btn-primary'
  
  .span8
    #map_canvas{:style => "width:800px; height:300px"}
  
    %h3 Data alumni FIM
    %table.footable
      %thead
        %tr
          %th{:style => 'width:30%', 'data-class' => 'expand'} Nama Lengkap
          %th{:style => 'width:60%'} Minat
          %th{:style => 'width:10%'} Angkatan
          %th{'data-hide'=>'all'} Tanggal lahir
          %th{'data-hide'=>'all'} Tempat lahir
          %th{'data-hide'=>'all'} Visi
      %tbody
        - @profiles.each do |profile|
          %tr
            %td= profile.fullname
            %td= profile.interest
            %td= profile.batch
            %td= profile.dob
            %td= profile.place_of_birth
            %td= profile.motto