  .well
    = simple_form_for(@profile, :url => update_point_profile_candidates_path, :html => {:id => 'profile_form', :class => 'form-horizontal'}) do |f|
      = f.error_notification
      = display_base_errors @profile

      .form-inputs
        = f.input :id, :as => :hidden
        - if params[:page]
          = hidden_field_tag 'page', params[:page]
        = f.input :cv_point, :label => "Nilai CV", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 0]], :include_blank => false
        = f.input :essay_point, :label => "Nilai Essi", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 0]], :include_blank => false
        = f.input :recommendation_letter_point, :label => "Nilai Surat rekomendasi", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 0]], :include_blank => false
        = f.input :special_location_comment, :label => "Keterangan", :input_html => {:rows => 8, :class => "span5"}
        = f.input :special_character_comment, :label => "Tipologi", :input_html => {:rows => 8, :class => "span5"}
        = f.input :school, :label => "Insitusi (jika perlu ada perbaikan)", :input_html => {:style => 'width:300px', "data-provide" => "typeahead", "data-source" => all_school_json}
      .form-actions
        = f.submit "Simpan", :class => "btn btn-primary"