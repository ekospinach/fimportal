              - if profile.choose_type == 2 && !profile.user.activist_profile.nil? then
                %br
                %b Aktivitas Pencapaian 1
                %br
                = profile.user.activist_profile.activity1_information
                %br
                %b Alasan Aktivitas Pencapaian 1
                %br
